{
  "name": "virtualbum",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:emulator": "cross-env NEXT_PUBLIC_USE_FIREBASE_EMULATOR=true next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:frontend": "jest test/frontend",
    "test:backend": "jest test/backend",
    "test:emulator": "firebase emulators:exec --only auth,firestore,storage \"jest --config test/integration/jest.config.js --runInBand\"",
    "test:integration": "jest --config test/integration/jest.config.js --runInBand",
    "emulator": "firebase emulators:start --only auth,firestore,storage",
    "emulator:ui": "firebase emulators:start",
    "seed:small": "npx tsx scripts/seed-emulator.ts small",
    "seed:medium": "npx tsx scripts/seed-emulator.ts medium",
    "seed:large": "npx tsx scripts/seed-emulator.ts large",
    "seed:stress": "npx tsx scripts/seed-emulator.ts stress",
    "seed:social": "npx tsx scripts/seed-emulator.ts social",
    "seed:albums": "npx tsx scripts/seed-emulator.ts albums",
    "seed:fresh": "npx tsx scripts/seed-emulator.ts fresh",
    "seed:active": "npx tsx scripts/seed-emulator.ts active",
    "seed:reset": "npx tsx scripts/seed-emulator.ts reset",
    "seed:list": "npx tsx scripts/seed-patterns.ts"
  },
  "dependencies": {
    "@emotion/react": "^11",
    "@mantine/core": "^7",
    "@mantine/dropzone": "^7",
    "@mantine/hooks": "^7",
    "@mantine/modals": "^7",
    "@mantine/notifications": "^7",
    "firebase": "^12.6.0",
    "firebase-admin": "^12.5.0",
    "lightgallery": "^2.9.0",
    "next": "^16.1.0",
    "nodemailer": "^7.0.11",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-easy-crop": "^5.5.6",
    "react-firebase-hooks": "^5.1.1",
    "react-image-crop": "^11.0.6",
    "react-intersection-observer": "^10.0.0",
    "react-photo-album": "^2.4.1"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^5.0.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^10.1.0",
    "eslint": "^9",
    "eslint-config-next": "^16.1.0",
    "firebase-tools": "^15.1.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.6",
    "typescript": "^5"
  }
}
